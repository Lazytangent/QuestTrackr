extends layout.pug

append head
  link(rel="stylesheet" href="/stylesheets/quests.css")
  script(src="/javascripts/quests.js")

block content
  .quests-header
    h2 Quests
  .categories-dropdown
    h4 Category
    select(name="category")
      option(value='all' selected) All
      each category in categories
        option(value=category.id)= category.tag
  .quests-container
