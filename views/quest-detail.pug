extends layout.pug

append head
  link(rel="stylesheet" href="/stylesheets/quest-detail.css")
  script(src="/javascripts/quest-detail.js")

block content
  .quest-container
    .quest-name.quest-data
      h3 Quest: #{quest.name}
    .quest-description.quest-data
      h5 Description:
      p= quest.description
    .quest-startDate.quest-data
      h5 Started On:
      p= quest.startDate
    .quest-deadline.quest-data
      h5 Deadline:
      p= quest.deadline
    .quest-xpValue.quest-data
      h5 XP Value:
      p #{quest.xpValue} Points
    .quest-solo.quest-data
      h5 Is this quest meant to be done in a group as a Raid or by oneself?
      if quest.solo
        p This is meant to be done by oneself.
      else
        p This is meant to be done in a group as a Raid.
    if quest.completedDate
      .quest-completedDate.quest-data
        p= quest.completedDate

